#!/usr/bin/env php
<?php

use Ibuildings\QaTools\Core\Application\CompilerPass\CommandsCompilerPass;
use Symfony\Component\Config\FileLocator;
use Symfony\Component\DependencyInjection\ContainerBuilder;
use Symfony\Component\DependencyInjection\Loader\YamlFileLoader;

require __DIR__.'/../vendor/autoload.php';

$container = new ContainerBuilder();
$container->addCompilerPass(new CommandsCompilerPass);

$loader = new YamlFileLoader($container, new FileLocator(__DIR__ . '/../src/Core/Resources/config'));
$loader->load('config.yml');
$loader->load('services.yml');

$container->compile();

$application = $container->get('qa_tools.application');
$application->run();
