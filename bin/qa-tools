#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

use Ibuildings\QaTools\Core\Application\Application;
use Ibuildings\QaTools\Core\Application\Command\InstallCommand;
use Ibuildings\QaTools\Core\Application\Command\PreCommitCommand;
use Ibuildings\QaTools\Core\Application\Command\PrePushCommand;

$application = new Application('Ibuildings QA-tools', 'dev');

$application->add(new InstallCommand());
$application->add(new PreCommitCommand());
$application->add(new PrePushCommand());

$application->run();
