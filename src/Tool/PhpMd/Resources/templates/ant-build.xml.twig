<target name="{{ targetName }}" description="Perform project mess detection using PHPMD">
    <exec executable="vendor/bin/phpmd" failonerror="true">
        <arg path="src" />
        <arg value="text" />
        <arg value="phpmd.xml" />
        <arg line="--suffixes {{ suffixes|join(',')|escape('xml') }}"/>
    </exec>
</target>
