<target name="{{ targetName }}" description="Perform syntax check of sourcecode files in parallel">
    <exec executable="vendor/bin/parallel-lint" failonerror="true">
        <arg value="--exclude"/>
        <arg value="vendor"/>
        <arg value="-e"/>
        <arg value="{{ extensions|join(',')|escape('xml') }}"/>
        <arg value="."/>
    </exec>
    <echo message="OK"/>
</target>
