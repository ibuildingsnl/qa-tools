<target name="{{ targetName }}"
        description="Find coding standard violations using PHP_CodeSniffer and create a log file with issues found">
    <exec executable="vendor/bin/phpcs" failonerror="true">
        <arg line="--runtime-set ignore_warnings_on_exit 1" />
        <arg value="--report-checkstyle=build/artifacts/logs/checkstyle-php.xml"/>
        <arg value="--report=full"/>
        <arg value="--standard=ruleset.xml"/>
        <arg value="--extensions=php"/>
        <arg value="--colors" />
        <arg path="src"/>
    </exec>
</target>
