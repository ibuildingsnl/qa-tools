{
    "name": "ibuildings/qa-tools",
    "autoload": {
        "psr-4": {
            "Ibuildings\\QaTools\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ibuildings\\QaTools\\UnitTest\\": ["tests/unit"],
            "Ibuildings\\QaTools\\IntegrationTest\\": ["tests/integration"],
            "Ibuildings\\QaTools\\SecurityTest\\": ["tests/security"],
            "Ibuildings\\QaTools\\SmokeTest\\": ["tests/smoke"]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Ibuildings\\QaTools\\Composer\\PharScriptHandler::requireBoxPhar"
        ],
        "build": [
            "Ibuildings\\QaTools\\Composer\\PharScriptHandler::buildPhar"
        ]
    },
    "require": {
        "php": "^5.6|^7.0",
        "beberlei/assert": "^2.5",
        "symfony/config": "^3.0",
        "symfony/console": "^3.0",
        "symfony/dependency-injection": "^3.0",
        "symfony/yaml": "^3.0",
        "twig/twig": "^1.24",
        "zendframework/zend-json": "^3.0"
    },
    "require-dev": {
        "behat/behat": "^3.1",
        "mockery/mockery": "^0.9.4",
        "phpunit/phpunit": "^5.4",
        "sensiolabs/security-checker": "^3.0"
    },
    "extra": {
        "qa-tools-box-source": "https://github.com/box-project/box2/releases/download/2.7.2/box-2.7.2.phar",
        "qa-tools-box-install-path": "./bin/box",
        "qa-tools-box-sha-sum": "47c34f95a322e9f8cc6572696decc6473b9331c5"
    }
}
